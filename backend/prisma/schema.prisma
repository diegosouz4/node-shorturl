generator client {
  provider = "prisma-client"
  output   = "../src/generated"
}

datasource db {
  provider = "postgresql"
}

model ShortUrl {
  id          String    @id @default(uuid())
  originalUrl String
  shortUrl    String    @unique
  clicks      Int       @default(0)
  expiresAt   DateTime?

  status urlStatus     @default(UNACTIVE)
  logs   ShortUrlLog[]

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, createdAt])
}

model ShortUrlLog {
  id      Int        @id @default(autoincrement())
  status  logsStatus @default(CREATED)
  details String?

  shortUrl   ShortUrl? @relation(fields: [shortUrlId], references: [id], onDelete: Cascade)
  shortUrlId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([shortUrlId, createdAt])
}

model User {
  id        String @id @default(uuid())
  email     String @unique
  firstName String
  lastName  String
  password  String
  role      Roles  @default(FREEBIE)

  urls ShortUrl[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([role])
}

enum Roles {
  FREEBIE
  SUBSCRIBER
  ADMIN
  MASTER
}

enum urlStatus {
  ACTIVE
  UNACTIVE
  EXPIRED
}

enum logsStatus {
  CREATED
  UPDATED
  DELETED
  REPLACED
  FAILED
}
